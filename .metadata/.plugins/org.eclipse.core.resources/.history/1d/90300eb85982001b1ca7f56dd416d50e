grammar fr.n7.PDL3 with org.eclipse.xtext.common.Terminals
generate pDL3 "http://www.n7.fr/PDL3"

Process :
	'process : ' name=ID
	'workdefinitions : ' (workDefinitions+=WorkDefinition';')*
	'worksequences : ' workSequences+=WorkSequence*;

ProcessElement :
	WorkDefinition | WorkSequence | Guidance;

WorkDefinition :
	'wd' name=ID;

WorkSequence :
	'ws' linkType=WorkSequenceType
		'from' predecessor=[WorkDefinition]
		'to' successor=[WorkDefinition] ;

Guidance :
	'note' texte=STRING ;

enum WorkSequenceType :
	start2start = 's2s'
	| finish2start = 'f2s'
	| start2finish = 's2f'
	| finish2finish = 'f2f'
	;
